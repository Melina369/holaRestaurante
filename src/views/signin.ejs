<%- include('partials/layout') %>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card mt-4 text-center">
                <div class="card-header">
                    <h3>LOGIN</h3>
                </div>
                <div class="card-body">
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Insertar Correo Electronico"
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Insertar Contraseña" class="form-control">
                        </div>
    
                        <button type="submit" class="btn btn-primary btn-block mt-4">
                            Iniciar Sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
