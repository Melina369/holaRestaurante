<body>
    <%- include('partials/navigation') %>

        <div class="container">
            <div class="row my-5">
                <!--FORM-->
                <div class="col-md-5 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <form action="/edit-m/<%= comida._id %>" method="POST">
                                <!--Manda los datos del formulario-->
                                <h3>Editar MenÃº:</h3>

